@model Team

@{
    ViewData["Title"] = "Equipes";
}

<h4>Equipe</h4>

<form asp-action="Edit" id="myform">

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12">
            <div class="card mt-2">
                <div class="card-body">
                    <div class="card-title"><h6>Informações Básicas</h6></div>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label class="control-label">Número Serial</label>
                                <input asp-for="Code" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="Code" class="text-danger"></span>

                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label class="control-label">Placa</label>
                                <input asp-for="Plate" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="Plate" class="text-danger"></span>

                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="AreaId">Empresa</label>
                                <select class="form-control form-control-sm" asp-for="AreaId">
                                    @foreach (Area item in ViewBag.Area)
                                    {
                                        <option value="@item.Id">@item.Name </option>
                                    }
                                </select>
                            </div>
                            <span asp-validation-for="AreaId" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="PartnerId">Equipe</label>
                                <select class="form-control form-control-sm" asp-for="PartnerId">
                                    @foreach (Partner item in ViewBag.Parceiro)
                                    {
                                        <option value="@item.Id">@item.Name </option>
                                    }
                                </select>
                            </div>
                            <span asp-validation-for="PartnerId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-4 mt-3">
            <input type="submit" value="Atualizar" class="btn btn-outline-success btn-sm w-150" /> |
            <a class="btn btn-outline-secondary btn-sm w-150" asp-action="Index">Voltar</a>
        </div>

    </div>

</form>


@section Scripts{

    <script>
        $(document).ready(function () {
            $("#TeamId").select2();
        });
    </script>
}