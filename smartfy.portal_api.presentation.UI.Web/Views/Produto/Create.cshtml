@model Produto

@{
    ViewData["Title"] = "Cadastro de Produto";
}

<h4>Produtos</h4>

<form asp-action="Create" id="myform">

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12">
            <div class="card mt-2">
                <div class="card-body">
                    <div class="card-title"><h6>Informações Básicas</h6></div>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="Codigo" class="control-label">Codigo</label>
                                <input asp-for="Codigo" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="Codigo" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="Descricao" class="control-label">Descricao</label>
                                <input asp-for="Descricao" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="DtVencimento" class="control-label">Data de Vencimento</label>
                                <input asp-for="DtVencimento" type="date" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="DtVencimento" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>        
        <div class="col-4 mt-3">
            <input type="submit" value="Cadastrar" class="btn btn-outline-success btn-sm w-150" /> |
            <a class="btn btn-outline-secondary btn-sm w-150" asp-action="Index">Voltar</a>
        </div>

    </div>

</form>